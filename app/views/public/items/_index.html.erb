<div class="row">
    <% items.each do |item| %>
      <div class="col-lg-3 col-md-6">
        <%= link_to(item) do %>
          <div class="card">
            <div class="card-img-top text-center">
              <%= image_tag item.image, size: "250x180", class: "index-img" %>
            </div>
            <div class="card-body text-dark">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text">
                ￥<%= item.tax_excluded_price.to_s(:delimited) %>　(税抜)
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>