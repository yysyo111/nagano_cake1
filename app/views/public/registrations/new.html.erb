<div class="container">
      <div class="mx-3"><h3 class="mb-5 mini-title">新規会員登録</h3></div>
        <div class="row">
          <div class="col-12">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "layouts/errors", obj: resource %>

              <div class="field row">
                <div class="col-3"><%= f.label :名前 %></div>
                <div class="col-1"><%= f.label :（姓） %></div>
                <div class="col-3"><%= f.text_field :last_name, autofocus: true, placeholder: "令和", size: 25 %></div>
                <div class="col-1"><%= f.label :（名） %></div>
                <div class="col-3"><%= f.text_field :first_name, placeholder: "道子", size: 25 %></div>
              </div>

              <div class="field row">
                <div class="col-3"><%= f.label :フリガナ %></div>
                <div class="col-1"><%= f.label :（セイ） %></div>
                <div class="col-3"><%= f.text_field :last_name_kana, placeholder: "レイワ", size: 25 %></div>
                <div class="col-1"><%= f.label :（メイ） %></div>
                <div class="col-3"><%= f.text_field :first_name_kana, placeholder: "ミチコ", size: 25 %></div>
              </div>

              <div class="field row">
                <div class="col-3"><%= f.label :メールアドレス %></div>
                <div class="col-3 offset-1"><%= f.email_field :email, autocomplete: "email", placeholder: "sample.@example.com", size: 25 %></div>
              </div>

              <div class="field row">
                <div class="col-3"><%= f.label :郵便番号（ハイフンなし） %></div>
                <div class="col-3 offset-1"><%= f.text_field :post_code, placeholder: "0000000", size: 25 %></div>
              </div>

              <div class="field row">
                <div class="col-3"><%= f.label :住所 %></div>
                <div class="col-6 offset-1"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: 60 %></div>
              </div>

              <div class="field row">
                <div class="col-3"><%= f.label :電話番号（ハイフンなし） %></div>
                <div class="col-3 offset-1"><%= f.text_field :phone_number, placeholder: "00000000000", size: 25 %></div>
              </div>

              <div class="field row">
                <div class="col-3">
                  <%= f.label :パスワード %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %>
                </div>
                <div class="col-3 offset-1"><%= f.password_field :password, autocomplete: "new-password", size: 25 %></div>
              </div>

              <div class="field row">
                <div class="col-3"><%= f.label :パスワード（確認用） %></div>
                <div class="col-3 offset-1"><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25 %></div>
              </div>

              <div class="actions row">
                <%= f.submit "新規登録", class: "btn btn-success col-3 offset-4" %>
              </div>
            <% end %>

            <div class="row">
              <div class="col-3 off-set-5">
                <h6 class="pass">既に登録済みの方</h6>
                <p><%= render "public/shared/links" %>からログインください。</p>
              </div>
            </div>

    </div>
  </div>
</div>