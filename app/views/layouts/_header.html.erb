<header class="shadow-sm p-3 mb-5 bg-body rounded">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand ", href="/">
        <%= image_tag 'logo6.png', class: 'icon' %>
      </a>
      <div class="px-5 text-light ">
        <% if customer_signed_in? %>
        ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon "></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto d-block justify-content-end">
        <% if customer_signed_in? %>
          <li class="d-inline-block">
            <%= link_to customers_my_page_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            マイページ
            <% end %>
          </li>
          <li class="d-inline-block">
            <%=  link_to items_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            商品一覧
            <% end %>
          </li>
          <li class="d-inline-block">
            <%=  link_to cart_items_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            カート
            <% end %>
          </li>
          <li class="d-inline-block">
            <%= link_to destroy_customer_session_path, method: :delete, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="d-inline-block">
            <%= link_to admin_items_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            商品一覧
            <% end %>
          </li>
          <li class="d-inline-block">
            <%=  link_to admin_customers_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            会員一覧
            <% end %>
          </li>
          <li class="d-inline-block">
            <%=  link_to admin_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            注文履歴一覧
            <% end %>
          </li>
          <li class="d-inline-block">
            <%=  link_to admin_genres_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            ジャンル一覧
            <% end %>
          </li>
          <li class="d-inline-block">
            <%= link_to destroy_admin_session_path, method: :delete, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="d-inline-block">
            <%= link_to items_path, class: "text-light border m-1 p-3 rounded font-weight-bold" do %>
            商品一覧
            <% end %>
          </li>
          <li class="d-inline-block">
            <%= link_to about_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            About
            <% end %>
          </li>
          <li class="d-inline-block">
            <%= link_to new_customer_registration_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            新規登録
            <% end %>
          </li>
          <li class="d-inline-block">
            <%= link_to new_customer_session_path, class: "text-light border m-1 p-3 rounded font-weight-bold"  do %>
            ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

