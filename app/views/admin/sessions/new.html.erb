<div class="container">
    <div class="mx-3"><h3 class="mb-5 mini-title">管理者ログイン</h3></div>
      <div class="row mx-5 px-5">
        <div class="col-12">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field row">
            <div class="col-4"><%= f.label :メールアドレス %></div>
            <div class="col-7"><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email", size: 40 %></div>
          </div>

          <div class="field row">
            <div class="col-4"><%= f.label :パスワード %></div>
            <div class="col-7"><%= f.password_field :password, autocomplete: "current-password", size: 40 %></div>
          </div>

            <!--<% if devise_mapping.rememberable? %>-->
              <!--<div class="field">-->
                <!--<%= f.check_box :remember_me %>-->
                <!--<%= f.label :remember_me %>-->
              <!--</div>-->
            <!--<% end %>-->

            <div class="actions row">
              <%= f.submit "ログイン", class: "btn btn-primary btn-block col-2 offset-4" %>
            </div>

          <% end %>

            <%= render "admin/shared/links" %>


      </div>
    </div>
  </div>
</div>